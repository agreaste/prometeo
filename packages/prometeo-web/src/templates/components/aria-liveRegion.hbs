<div class="p-4 rounded-lg bg-amber-100 relative h-[658px]">
  <form role="search" class="w-full bg-white border-b-2 border-amber-400 p-2 rounded-md flex flex-col w-full">
    <label for="search-text" class="text-xs grow">Search for articles...</label>
    <div class="flex flex-row">
      <input type="text" name="search" id="search-text" class="grow p-2">
      <button type="submit" id="search-button" class="bg-amber-500 text-white uppercase font-semibold p-2 rounded-sm">
        search
      </button>
    </div>
  </form>
  <p aria-hidden="true" class="text-xs text-amber-700"  id="results-label">Risultati di ricerca: <span id="results-number"></span> articoli trovati</p>
  <section role="region" class="grid grid-cols-4 auto-rows-min gap-2 my-4 max-h-[520px] overflow-scroll" id="search-results" tabindex="-1" aria-live="polite" aria-busy="false">

  </section>
  <p id="search-loading" role="status" class="loading__alert" aria-live="assertive">
    <span class="fa-solid fa-circle-notch text-amber-500 fa-spin" aria-hidden="true"></span>
    Loading...
  </p>
  <div></div>
</div>