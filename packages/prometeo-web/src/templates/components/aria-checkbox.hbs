<div class="p-4 mb-3">
  <fieldset id="n-framework-group" aria-labelledby="legend">
    <legend class="text-indigo-600 font-semibold" id="legend">JS framework:</legend>
    <input type="checkbox" name="framework" value="react" id="n-react">
    <label for="n-react">React</label>
    <input type="checkbox" name="framework" value="vue" id="n-vue">
    <label for="n-vue">Vue</label>
    <input type="checkbox" name="framework" value="squarejs" id="n-squarejs">
    <label for="n-squarejs">Square js</label>
    <input type="checkbox" name="framework" value="react,vue,squarejs" id="n-all">
    <label for="n-all">All</label>
  </fieldset>
</div>
<div class="p-4 mb-3">
  <p id="checkbox-label" class="my-2 font-semibold text-lg">JS framework:</p>
  <div role="group" aria-labelledby="checkbox-label" class="flex flex-row">
    <button role="checkbox" aria-checked="false" id="c-react" is="custom-checkbox">
      <span class="fa-brands fa-react h-8 w-8 mb-1 pointer-events-none" aria-hidden="true"></span>
      React
    </button>
    <button role="checkbox" aria-checked="false" id="c-vue" is="custom-checkbox">
      <span class="fa-brands fa-vuejs h-8 w-8 mb-1 pointer-events-none" aria-hidden="true"></span>
      Vue
    </button>
    <button role="checkbox" aria-checked="false" id="c-squarejs" is="custom-checkbox">
      <span class="fa-brands fa-js-square h-8 w-8 mb-1 pointer-events-none" aria-hidden="true"></span>
      Square JS
    </button>
    <button role="checkbox" aria-checked="false" id="c-all" is="select-all">
      <div class="h-8">
        <span class="fa-brands fa-react h-4 w-4 mb-1 pointer-events-none translate-y-3" style="visibility: hidden" data-indicator="c-react"></span>
        <span class="fa-brands fa-vuejs h-4 w-4 mb-1 pointer-events-none" style="visibility: hidden" data-indicator="c-vue"></span>
        <span class="fa-brands fa-js-square h-4 w-4 mb-1 pointer-events-none translate-y-3" style="visibility: hidden" data-indicator="c-squarejs"></span>
      </div>
      All
    </button>
  </div>
</div>