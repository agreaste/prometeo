<div class="p-4 mb-3">
  <fieldset>
    <legend class="text-emerald-600 font-semibold">Choose your OS</legend>
    <input type="radio" name="os" value="macos" id="n-apple">
    <label for="n-apple">Apple</label>
    <input type="radio" name="os" value="windows" id="n-windows">
    <label for="n-windows">Windows</label>
    <input type="radio" name="os" value="ubuntu" id="n-ubuntu">
    <label for="n-ubuntu">Ubuntu</label>
  </fieldset>
</div>
<div class="p-4 mb-3">
  <p id="radio-label" class="my-2 font-semibold text-lg">Choose your OS</p>
  <ul role="radiogroup" aria-labelledby="radio-label" tabindex="0" id="custom-radio" is="custom-radio">
    <li role="radio" aria-checked="false" id="c-apple">
      <span class="fa-brands fa-apple h-8 w-8 mb-1 pointer-events-none" aria-hidden="true"></span>
      MacOs
    </li>
    <li role="radio" aria-checked="false" id="c-windows">
      <span class="fa-brands fa-windows h-8 w-8 mb-1 pointer-events-none" aria-hidden="true"></span>
      Windows
    </li>
    <li role="radio" aria-checked="false" id="c-ubuntu">
      <span class="fa-brands fa-ubuntu h-8 w-8 mb-1 pointer-events-none" aria-hidden="true"></span>
      Ubuntu
    </li>
  </ul>
</div>