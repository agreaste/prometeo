{
    "compilerOptions": {
        "target": "es2015",
        "lib": ["es5", "es6", "dom"],
        "strict": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "module": "esnext",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/esm/types",
        "declarationMap": true,
        "emitDeclarationOnly": true,
        "outDir": "dist/esm",
        "esModuleInterop": false,
        "jsx": "react-jsx"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}